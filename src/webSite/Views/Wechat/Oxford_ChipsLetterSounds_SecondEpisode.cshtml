    wx.config({
        debug: false,
        appId: 'wxf0aa207b2437d9bc',
        timestamp: @Model.Timestamp,
        nonceStr: '@Model.NouceString',
        signature: '@Model.Signature',
        jsApiList: [
          // 所有要调用的 API 都要加到这个列表中
          'checkJsApi',
           'onMenuShareTimeline',
           'onMenuShareAppMessage',
           'showMenuItems',
           'showOptionMenu'
        ]
    });
    wx.ready(function () {
        // 在这里调用 API
        wx.onMenuShareTimeline({
            title: '2016年下半年《东方娃娃杂志》征订，一天不到一块钱，订阅国内最受欢迎的幼儿刊物，赠送一套四本惊艳立体手工书',
            desc: '杂志期刊因为其连续性，每个月都有期待、每个月都有新鲜，对于培养孩子的阅读习惯，塑造亲子阅读氛围有独特的效果，这也是我们推荐期刊的重要原因。',
            link: 'http://www.tigerartstudio.cn/wechat/OrientalBaby',
            imgUrl: 'http://www.tigerartstudio.cn/mediaFiles/books1/OrientalBaby.png',
            trigger: function (res) {
                // 不要尝试在trigger中使用ajax异步请求修改本次分享的内容，因为客户端分享操作是一个同步操作，这时候使用ajax的回包会还没有返回
                //alert('用户点击发送给朋友');
            },
            success: function (res) {
                window.location.href = 'http://mp.weixin.qq.com/s?__biz=MzA5NTU0MTMzOQ==&mid=504880369&idx=1&sn=d191ab3c2d5072eaac4c63f01f400ded&scene=23&srcid=06061WgSv0gR9Efudrn89YXE#rd';
            },
            cancel: function (res) {
                //alert('已取消');
            },
            fail: function (res) {
                alert(JSON.stringify(res));
            }
        });
    });
</script>
