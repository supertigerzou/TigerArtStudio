@{
    ViewData["Title"] = "好书送不停，只等您来拿！";
}
<h2>@ViewData["Title"]</h2>

<img style="width: 200px; height: 200px; display: block; margin-left: auto; margin-right: auto" src="http://www.tigerartstudio.cn/mediaFiles/aizaizuoguanjiaozaiyou.jpg" />
<br />
<button id="luck" type="button" class="btn btn-primary btn-lg btn-block">试试手气</button>

<div id="progress" class="progress" style="display: none">
    <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
        <span class="sr-only">45% Complete</span>
    </div>
</div>
<div id="code" class="page-header">
</div>
<script>
    $('#luck').on('click', function () {
        $(this).hide("fast", function showNext() {
            $('#progress').show("fast");
            $.ajax({
                method: "POST",
                url: "http://localhost:59825/api/Activities",
                data: { phone: "12345654321" }
            }).done(function (msg) {
                $('#progress').hide("fast");
                $('#code').html("<h1>Your code is: " + msg + "</h1>");
            });
        });
    })
</script>
